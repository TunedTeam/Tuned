<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tuned" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender</item>
        <item name="colorSecondaryVariant">@color/light_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <!-- Style for Search View (color options) -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Set edit text color for Search View to white -->
        <item name="android:editTextColor">@android:color/white</item>
        <!-- Set text hint color for Search View to white -->
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Set search icon color for Search View to white -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- Set text color highlight for Search View to dark purple -->
        <item name="colorControlActivated">@color/purple_500</item>
    </style>
    <!-- Style for View line divider -->
    <style name="Divider">
        <item name="android:background">@color/dark_purple</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextColorHighlight">
        <!-- Set text color highlight for Search View to dark purple -->
        <item name="colorControlActivated">@color/purple_500</item>
    </style>

</resources>