<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEC0F1"
    tools:context=".fragments.DiscoverFragment">


        <Button
            android:id="@+id/btnDiscover"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:text="Discover"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:background="@drawable/feed_button"
            app:backgroundTint="#7161EF" />

        <Button
            android:id="@+id/btnReviews"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="Reviews"
            android:textColor="@color/white"
            android:background="@drawable/feed_button"
            app:backgroundTint="#7161EF" />/>

        <Button
            android:id="@+id/btnLists"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Lists"
            android:textColor="@color/white"
            android:background="@drawable/feed_button"
            app:backgroundTint="#7161EF" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="113dp"
            android:fontFamily="sans-serif"
            android:text="Welcome back, Bob!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNewReleases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWelcome"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:text="New Releases"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white" />


</RelativeLayout>